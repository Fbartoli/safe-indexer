{
  "name": "safe-indexer",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ponder dev",
    "start": "ponder start",
    "db": "ponder db",
    "codegen": "ponder codegen",
    "serve": "ponder serve",
    "lint": "eslint 'src/**/*.ts' '*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' '*.ts' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format:check",
    "prepare": "husky"
  },
  "dependencies": {
    "@safe-global/safe-deployments": "^1.37.48",
    "abitype": "^0.10.2",
    "hono": "^4.5.0",
    "ponder": "^0.15.2",
    "viem": "^2.21.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "eslint-config-ponder": "^0.15.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0 --ignore-pattern '**/vite.config.ts'",
      "prettier --write"
    ],
    "!(*vite.config).{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.14"
  }
}
